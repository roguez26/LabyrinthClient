<Window x:Class="LabyrinthClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabyrinthClient"
        xmlns:p="clr-namespace:LabyrinthClient.Properties"
        mc:Ignorable="d"
        Title="Login" Height="720" Width="1280">
    <Grid>
        <Label Content="Labyrinth The Game" HorizontalAlignment="Center" Margin="0,181,0,0" VerticalAlignment="Top" FontSize="38"/>
        <TabControl Margin="301,275,301,164" RenderTransformOrigin="0.5,0.5">
            <TabControl.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.458"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.792"/>
                </TransformGroup>
            </TabControl.RenderTransform>
            <TabItem x:Name="loginTabItem" Header="{x:Static p:Resources.GlobalLogin}" Margin="209,-2,-209,1" Width="85">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="White" Margin="2,0,1,0" Height="236">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="203*"/>
                        <ColumnDefinition Width="264*"/>
                        <ColumnDefinition Width="202*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="emailForLoginTextBox" HorizontalAlignment="Center" Margin="0,34,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.GlobalEmailTextBoxPlaceholder}" VerticalAlignment="Top" Width="258" Height="25" Grid.Column="1"/>
                    <TextBox x:Name="passwordForLoginTextBox" HorizontalAlignment="Center" Margin="0,67,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.GlobalPasswordTextBoxPlaceholder}" VerticalAlignment="Top" Width="258" Height="25" Grid.Column="1"/>
                    <Button x:Name="LoginButton" Content="{x:Static p:Resources.GlobalLogin}" HorizontalAlignment="Left" Margin="110,170,0,0" VerticalAlignment="Top" Grid.Column="1" Click="LoginButton_Click" Height="20" Width="33"/>

                </Grid>
            </TabItem>
            <TabItem Header="{x:Static p:Resources.GlobalSignup}" Margin="210,-2,-210,0" Width="85">
                <Grid Background="#FFE5E5E5">
                    <TextBox Name="UsernameTextbox" HorizontalAlignment="Center" Margin="0,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="259"  Text="{x:Static p:Resources.GlobalUsernameTextBoxPlaceholder}" Height="25"/>
                    <TextBox Name="EmailTextbox" HorizontalAlignment="Center" Margin="0,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="259"  Text="{x:Static p:Resources.GlobalEmailTextBoxPlaceholder}" Height="25"/>
                    <PasswordBox Name="PasswordBox" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Width="258"  Height="25"/>
                    <ComboBox Name="CountryCombobox" Width="259" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,137,0,0"/>
                    <Button Content="{x:Static p:Resources.GlobalSignup}" HorizontalAlignment="Left" Margin="333,193,0,0" VerticalAlignment="Top" Click="SignupButtonIsPressed"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="joinAsGuestTabItem" Header="{x:Static p:Resources.JoinAsGuestTabItem}" Margin="211,-2,-211,0" Width="85">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="White" Height="228">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="115*"/>
                        <ColumnDefinition Width="109*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="lobbyTextBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Text="{x:Static p:Resources.GlobalLobbyIdTextBoxPlaceholder}" Margin="216,35,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="258" Height="25"/>
                    <TextBox x:Name="userNameForJoinAsGuestTextBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="215,69,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.GlobalUsernameTextBoxPlaceholder}" VerticalAlignment="Top" Width="258" Height="25"/>
                    <Button Content="{x:Static p:Resources.JoinGameButton}" HorizontalAlignment="Left" Margin="307,166,0,0" VerticalAlignment="Top" Width="57" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
