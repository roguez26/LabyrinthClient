<Window x:Class="LabyrinthClient.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabyrinthClient"
        mc:Ignorable="d"
        Title="CustomMessageBox" Height="200" Width="400"
        WindowStyle="ToolWindow">
    <StackPanel>
        <TextBlock x:Name="MessageTextBlock" Text="Custom Message" Margin="10" TextAlignment="Left" Height="51" Width="354"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Width="286">
            <Button Content="Aceptar" Click="OnAcceptButtonClick" Margin="5"/>
            <Button Content="Rechazar" Click="OnRejectButtonClick" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
