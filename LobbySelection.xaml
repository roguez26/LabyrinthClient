<Window x:Class="LabyrinthClient.LobbySelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabyrinthClient"
        mc:Ignorable="d"
        Title="LobbySelection" Height="161" Width="355">
    <Grid Margin="0,0,0,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="lobbyCodeTextBox" HorizontalAlignment="Center" Margin="0,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="277" />
        <Button Content="Join" HorizontalAlignment="Left" Margin="188,107,0,0" VerticalAlignment="Top" Width="50" Click="JoinButtonIsPressed"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="259,107,0,0" VerticalAlignment="Top" Width="56" Click="CancelButtonIsPressed"/>

    </Grid>
</Window>
