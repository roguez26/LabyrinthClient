<Window x:Class="LabyrinthClient.FriendInvitation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabyrinthClient"
        xmlns:p="clr-namespace:LabyrinthClient.Properties"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        Title="FriendInvitation" Height="480" Width="320"
        ResizeMode="NoResize"
        Background="Black"
        Closing="CloseButtonIsPressed">

    <Window.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>


    </Window.Resources>

    <Grid Margin="-8,-25,0, 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Canvas Margin="0,10,0,35" Grid.ColumnSpan="3">
            <ListView x:Name="DynamicFriendsListView" ItemsSource="{Binding FriendItems}" Width="300" Height="428" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Visible" Background="{x:Null}" Canvas.Top="20" Canvas.Left="10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="0" Width="285" Height="55" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Border.Background>
                                <SolidColorBrush Color="Wheat" Opacity="0.4"/>
                            </Border.Background>
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40*"/>
                                    <ColumnDefinition Width="150*"/>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition Width="10"/>
                                </Grid.ColumnDefinitions>
                                <!-- Imagen de perfil circular -->
                                <Image Width="40" 
       Height="40" 
       Canvas.Left="10" 
       Canvas.Top="7" 
       Source="{Binding ProfilePicture}" 
       Stretch="UniformToFill">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="/GraphicItems/userProfilePicture.png"/>
                                        </Style>
                                    </Image.Style>
                                    <Image.Clip>
                                        <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                                    </Image.Clip>
                                </Image>



                                <!-- Texto: Nombre de usuario -->
                                <TextBlock Width="130" Text="{Binding Username}" FontSize="12" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                                
                                <Button Width="25" VerticalAlignment="Center" HorizontalAlignment="Right" Height="25" Click="SendInvitationButtonIsFriend" BorderBrush="{x:Null}" Grid.ColumnSpan="3">
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                        </Style>
                                    </Button.Style>
                                    <Button.Background>
                                        <ImageBrush ImageSource="/GraphicItems/SendInvitation.png"/>
                                    </Button.Background>
                                </Button>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </Canvas>

    </Grid>
</Window>
